generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Роль пользователя.
enum Role {
  USER
  ADMIN
}

model Auth {
  id            Int        @id @default(autoincrement())
  name          String                      // Имя пользователя.
  email         String     @unique          // Почтовый адрес.
  role          Role       @default(USER)   // Роль.
  passwordHash  String                      // Хеш пароля.
  refreshToken  String     @default("")     // Рефреш токен.
  alive         Boolean                     // Пользователь авторизовывался.
  createdAt     DateTime   @default(now())  // Время создания.
  updatedAt     DateTime   @updatedAt       // Время изменения.
}